<h1 class="text-center my-5"><%= @flat.name %></h1>

<div class="container">
  <%= simple_form_for @flat, html: { class: 'bg-light p-4 rounded shadow-sm' } do |f| %>
    <div class="row">
      <div class="col-12 col-md-6">
        <%= f.input :name, label: 'Apartment Name', input_html: { class: 'form-control' } %>
      </div>
      <div class="col-12 col-md-6">
        <%= f.input :address, label: 'Address', input_html: { class: 'form-control' } %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-12">
        <%= f.input :description, label: 'Description', input_html: { class: 'form-control', rows: 4 } %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-12 col-md-6">
        <%= f.input :price_per_night, label: 'Price per Night (in â‚¬)', input_html: { class: 'form-control' } %>
      </div>
      <div class="col-12 col-md-6">
        <%= f.input :number_of_guests, label: 'Number of Guests', input_html: { class: 'form-control' } %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-12">
        <%= f.button :submit, 'Update Apartment', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to 'Back', flat_path(@flat), class: 'btn btn-secondary' %>
  </div>
</div>
