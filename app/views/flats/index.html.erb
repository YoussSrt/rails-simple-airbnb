<h1 class="text-center my-5">All Flats</h1>

<div class="container">
  <div class="d-flex">
    <% @flats.each do |flat| %>
      <div class="col-12 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= link_to flat.name, flat_path(flat), class: 'text-dark' %></h5>
            <p class="card-text"><%= flat.description.truncate(100) %></p>
            <p class="card-text text-muted">Price per night: <%= flat.price_per_night %>â‚¬</p>
            <p class="card-text text-muted">Guests: <%= flat.number_of_guests %></p>
            <%= link_to "View Details", flat_path(flat), class: "btn btn-primary mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center mt-4">
  <%= link_to 'Add a new apartment', new_flat_path, class: "btn btn-success" %>
</div>
