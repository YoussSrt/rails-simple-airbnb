<%= simple_form_for @flat, html: { class: 'container mt-5' } do |f| %>
  <div class="row">
    <div class="col-12 col-md-6">
      <%= f.input :name, label: 'Apartment Name', input_html: { class: 'form-control' } %>
    </div>
    <div class="col-12 col-md-6">
      <%= f.input :address, label: 'Address', input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <%= f.input :description, label: 'Description', input_html: { class: 'form-control', rows: 3 } %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12 col-md-6">
      <%= f.input :price_per_night, label: 'Price per Night (in â‚¬)', input_html: { class: 'form-control' } %>
    </div>
    <div class="col-12 col-md-6">
      <%= f.input :number_of_guests, label: 'Number of Guests', input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <%= f.button :submit, 'Create Apartment', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
